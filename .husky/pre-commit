#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo 'ğŸ‘· Styling, Testing and Building your project before committing...'

# Check Prettier standards
yarn format-prettier && yarn check-prettier ||
(
  echo 'âŒ Prettier Check Failed.
    Run yarn format-prettier, add changes and try commit again.';
  false;
)

# Check ESLint Standards
yarn lint-staged ||
(
  echo 'âŒ ESLint Check Failed.
    Make the required changes listed above, add changes and try to commit again.'
  false;
)


# Check tsconfig standards
yarn check-types ||
(
  echo 'âŒ Type Check Failed.
    Make the changes required above.'
  false;
)


# If everything passes... Now we can commit
echo 'ğŸ‘· Trying to build now...'

yarn build ||
(
  echo 'âŒ Build Failed.
    View the errors above to see why.'
  false;
)

# If everything passes... Now we can commit
echo 'âœ… Built Succesfully. Committing...'
